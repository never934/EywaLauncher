<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_fragment"
    android:layout_width="490px"
    android:layout_height="670px"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="10px"
    card_view:cardElevation="5px">

    <android.support.constraint.ConstraintLayout
        android:layout_width="470px"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="213px"
            android:layout_height="30px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-light"
            android:text="Новости"
            android:textColor="@android:color/black"
            android:textSize="24px"
            card_view:layout_constraintBottom_toTopOf="@+id/Content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Content"
            android:layout_width="match_parent"
            android:layout_height="590px"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>